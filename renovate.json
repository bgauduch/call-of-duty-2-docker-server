{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "labels": ["dependencies"],
  "assignees": ["bgauduch"],
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update voron libcod git commit SHA in Dockerfile",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG LIBCOD_VORON_VERSION=\"(?<currentValue>[a-f0-9]+)\""
      ],
      "datasourceTemplate": "git-refs",
      "depNameTemplate": "https://github.com/voron00/libcod",
      "packageNameTemplate": "voron00/libcod",
      "versioningTemplate": "loose"
    },
    {
      "customType": "regex",
      "description": "Update ibuddieat zk_libcod git tag in Dockerfile",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG LIBCOD_IBUDDIEAT_VERSION=\"(?<currentValue>v[0-9.]+)\""
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "ibuddieat/zk_libcod",
      "extractVersionTemplate": "^(?<version>v.+)$"
    },
    {
      "customType": "regex",
      "description": "Update Speex version git tag in Dockerfile",
      "managerFilePatterns": ["/^Dockerfile$/"],
      "matchStrings": [
        "ARG SPEEX_VERSION=\"(?<currentValue>Speex-[0-9.]+)\""
      ],
      "datasourceTemplate": "git-tags",
      "depNameTemplate": "https://gitlab.xiph.org/xiph/speex.git",
      "packageNameTemplate": "xiph/speex",
      "extractVersionTemplate": "^(?<version>Speex-.+)$"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["debian"],
      "versioning": "loose",
      "labels": ["docker", "debian"],
      "automerge": true,
      "commitMessagePrefix": "chore(deps):",
      "commitMessageTopic": "Debian base image"
    },
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["alpine"],
      "labels": ["docker", "alpine"],
      "automerge": false,
      "commitMessagePrefix": "chore(deps):",
      "commitMessageTopic": "Alpine runtime image"
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["major"],
      "labels": ["docker", "major-update"],
      "automerge": false
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["minor", "patch"],
      "labels": ["docker", "minor-update"],
      "automerge": true
    },
    {
      "matchDatasources": ["github-actions"],
      "labels": ["github-actions"],
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["voron00/libcod", "ibuddieat/zk_libcod"],
      "labels": ["dependencies", "libcod"],
      "automerge": false,
      "reviewers": ["bgauduch"],
      "commitMessagePrefix": "feat(deps):",
      "commitMessageTopic": "{{depName}}",
      "prBodyNotes": [
        "⚠️ **Important**: This updates a libcod library version. Please test thoroughly with multiple COD2 server variants (1.0, 1.2, 1.3) before merging."
      ]
    },
    {
      "matchManagers": ["custom.regex"],
      "matchPackageNames": ["xiph/speex"],
      "labels": ["dependencies", "speex"],
      "automerge": false,
      "reviewers": ["bgauduch"],
      "commitMessagePrefix": "chore(deps):",
      "commitMessageTopic": "{{depName}}",
      "prBodyNotes": [
        "⚠️ **Note**: This updates the Speex audio codec library version. Speex is only used when `LIBCOD_SPEEX_ENABLE=1` for the ibuddieat libcod variant."
      ]
    }
  ],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "assignees": ["bgauduch"]
  },
  "lockFileMaintenance": {
    "enabled": false
  }
}
